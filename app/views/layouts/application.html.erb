<!--viewsフォルダ内のファイルは、クライアントに生成されるウェブページをhtml形式で記述します。-->
<!--application.html.erbはすべてのビューに反映されるHTMLファイルになります。そのため、全ビュー共通の「ヘッダー・フッター」を記述するのに適しています。-->
<!DOCTYPE html>
<html>
  <head>
    <title>SampleApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/d29545c979.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
        <header>
      <h1 class="headline"> All Lists </h1>
    </header>
    <nav>
      <ul class="nav-list">
        <li class="nav-list-item">
          <%= link_to "Top", top_path %>
        </li>
        <li class="nav-list-item">
          <%= link_to "TodoLists", todolists_path %>
        </li>
        <li class="nav-list-item">
          <%= link_to "New List", todolists_new_path %>
        </li>
      </ul>
    </nav>
    <main>
    <%= yield %>
    </main>

  </body>
</html>
